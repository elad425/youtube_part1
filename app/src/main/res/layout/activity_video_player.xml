<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <VideoView
                android:id="@+id/tv_video_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/video_player" />

            <ImageButton
                android:id="@+id/tv_video_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/back"
                android:padding="4dp"
                app:srcCompat="@drawable/ic_back" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_video_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_light"
                android:paddingHorizontal="8dp"
                android:text="@string/video_title"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Sample Video Title"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <TextView
                android:id="@+id/tv_video_views"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/views"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@android:color/darker_gray"
                tools:text="1M views"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/dot"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tv_publish_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:text="@string/publish_date"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                tools:text="1 year ago" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv_creator"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/creator_name"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@android:color/black"
                    tools:text="creator"
                    android:layout_weight="10"/>

                <ImageButton
                    android:id="@+id/tv_btn_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_like"
                    android:contentDescription="@string/like"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/tv_btn_dislike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_dislike"
                    android:contentDescription="@string/dislike"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/tv_btn_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_share"
                    android:contentDescription="@string/share"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
